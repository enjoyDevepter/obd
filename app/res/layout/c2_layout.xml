<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <View
        android:id="@+id/back"
        android:layout_width="27dp"
        android:layout_height="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/hud_back" />

    <LinearLayout
        android:layout_width="248dp"
        android:layout_height="220dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/warm_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/tire"
                android:layout_width="53dp"
                android:layout_height="47dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/c2_tire_show" />

            <View
                android:id="@+id/fault"
                android:layout_width="53dp"
                android:layout_height="47dp"
                android:layout_marginLeft="98dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/c2_fault_show" />

            <View
                android:id="@+id/voltage"
                android:layout_width="53dp"
                android:layout_height="47dp"
                android:layout_marginLeft="166dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/c2_voltage_show" />


            <View
                android:id="@+id/temperature"
                android:layout_width="53dp"
                android:layout_height="47dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="75dp"
                android:background="@drawable/c2_temperature_show" />


            <View
                android:id="@+id/speed"
                android:layout_width="53dp"
                android:layout_height="47dp"
                android:layout_marginLeft="98dp"
                android:layout_marginTop="75dp"
                android:background="@drawable/c2_speed_show" />


            <View
                android:id="@+id/oil"
                android:layout_width="53dp"
                android:layout_height="47dp"
                android:layout_marginLeft="166dp"
                android:layout_marginTop="75dp"
                android:background="@drawable/c2_oil_show" />

            <View
                android:id="@+id/tired"
                android:layout_width="53dp"
                android:layout_height="47dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="132dp"
                android:background="@drawable/c2_tired_show" />

        </FrameLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/setting"
        android:layout_width="46dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"
        android:background="@drawable/setting_bg"
        android:gravity="center"
        android:text="界面"
        android:textColor="#FFFEFEFE"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/params"
        android:layout_width="46dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/setting_bg"
        android:gravity="center"
        android:text="设置"
        android:textColor="#FFFEFEFE"
        android:textSize="14sp" />
</RelativeLayout>
