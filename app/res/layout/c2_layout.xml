<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <View
        android:id="@+id/back"
        android:layout_width="27dp"
        android:layout_height="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/hud_back" />

    <LinearLayout
        android:layout_width="592dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="10dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/regular_layout"
                    android:layout_width="176dp"
                    android:layout_height="98dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center">

                    <View
                        android:id="@+id/regular"
                        android:layout_width="172dp"
                        android:layout_height="94dp"
                        android:layout_gravity="center"
                        android:background="@drawable/regular_sel" />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="常规模式"
                    android:textColor="#FFF6F9F9"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/overall_layout"
                    android:layout_width="176dp"
                    android:layout_height="98dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center">

                    <View
                        android:id="@+id/overall"
                        android:layout_width="172dp"
                        android:layout_height="94dp"
                        android:layout_gravity="center"
                        android:background="@drawable/overall_normal" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全局模式"
                    android:textColor="#FFF6F9F9"
                    android:textSize="14sp" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <FrameLayout
                    android:id="@+id/standard_layout"
                    android:layout_width="176dp"
                    android:layout_height="98dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center">

                    <View
                        android:id="@+id/standard"
                        android:layout_width="172dp"
                        android:layout_height="94dp"
                        android:layout_gravity="center"
                        android:background="@drawable/standard_normal" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标准模式"
                    android:textColor="#FFF6F9F9"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/concise_layout"
                    android:layout_width="176dp"
                    android:layout_height="98dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center">

                    <View
                        android:id="@+id/concise"
                        android:layout_width="172dp"
                        android:layout_height="94dp"
                        android:layout_gravity="center"
                        android:background="@drawable/concise_normal" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="简洁模式"
                    android:textColor="#FFF6F9F9"
                    android:textSize="14sp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/warm_layout"
            android:layout_width="312dp"
            android:layout_height="68dp"
            android:layout_marginTop="10dp">

            <View
                android:id="@+id/tire"
                android:layout_width="30dp"
                android:layout_height="26dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/c2_tire_show" />

            <View
                android:id="@+id/fault"
                android:layout_width="30dp"
                android:layout_height="26dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/c2_fault_show" />

            <View
                android:id="@+id/voltage"
                android:layout_width="30dp"
                android:layout_height="26dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/c2_voltage_show" />


            <View
                android:id="@+id/temperature"
                android:layout_width="30dp"
                android:layout_height="26dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/c2_temperature_show" />


            <View
                android:id="@+id/speed"
                android:layout_width="30dp"
                android:layout_height="26dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/c2_speed_show" />


            <View
                android:id="@+id/oil"
                android:layout_width="30dp"
                android:layout_height="26dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/c2_oil_show" />

            <View
                android:id="@+id/tired"
                android:layout_width="30dp"
                android:layout_height="26dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/c2_tired_show" />

        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/setting"
        android:layout_width="46dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"
        android:background="@drawable/setting_bg"
        android:gravity="center"
        android:text="界面"
        android:textColor="#FFFEFEFE"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/params"
        android:layout_width="46dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/setting_bg"
        android:gravity="center"
        android:text="设置"
        android:textColor="#FFFEFEFE"
        android:textSize="14sp" />
</RelativeLayout>
