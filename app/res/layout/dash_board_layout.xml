<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:berdy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:id="@+id/line_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dip"
                android:layout_marginTop="4dip"
                android:src="@drawable/bluetoothconnect" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/top"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/line_checker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dip"
                    android:layout_marginRight="43dip">

                    <ImageView
                        android:id="@+id/iv_physical_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/fault_code_normal" />

                    <TextView
                        android:id="@+id/tv_check_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=""
                        android:textColor="#02fff6"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="43dip">

                    <ImageView
                        android:id="@+id/iv_temperature_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/temperature_icon2" />

                    <TextView
                        android:id="@+id/tv_engineCoolantTemperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=""
                        android:textColor="#02fff6"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line_voltage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="43dip">

                    <ImageView
                        android:id="@+id/iv_voltage_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/voltage_icon1" />

                    <TextView
                        android:id="@+id/tv_voltage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=""
                        android:textColor="#02fff6"
                        android:textSize="11sp" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/bt_stop"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="9dip"
                android:layout_marginTop="4dip"
                android:background="@drawable/bg_dashboard_h_button" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dashboard1_bg">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dashboard2_bg"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:background="@drawable/bgjianpian"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:text="剩余油量（%）:"
                        android:textColor="#02fff6"
                        android:textSize="12sp" />

                    <com.miyuan.obd.view.TextViewFontLcdEx
                        android:id="@+id/surplusOil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="00"
                        android:textColor="#02fff6"
                        android:textSize="@dimen/text_size2"
                        berdy:typeface="LcdD.ttf" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/rela_bigdashboard"
                    android:layout_marginLeft="235dp"
                    android:background="@drawable/xiaopan">

                    <ImageView
                        android:id="@+id/xiaozhen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dip"
                        android:src="@drawable/xiaozhen" />

                    <LinearLayout
                        android:id="@+id/line_rmp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/xiaozhen"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/layout_marginBottom"
                        android:orientation="horizontal">

                        <com.miyuan.obd.view.TextViewFontLcdEx
                            android:id="@+id/tve_rpm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0 "
                            android:textColor="#02fff6"
                            android:textSize="28sp"
                            berdy:typeface="LcdD.ttf" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/line_rmp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/layout_marginTop2"
                        android:text="r/min"
                        android:textColor="#02fff6"
                        android:textSize="9.3sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rela_bigdashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_bigpan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bigdashboard" />

                    <ImageView
                        android:id="@+id/dazhen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/layout_marginTop7"
                        android:src="@drawable/changzhen_v" />

                    <LinearLayout
                        android:id="@+id/line_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/iv_bigpan"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="25dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <!-- 速度 -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.miyuan.obd.view.TextViewFontLcdEx
                                android:id="@+id/tve_speed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 "
                                android:textColor="#02fff6"
                                android:textSize="56sp"
                                berdy:typeface="LcdD.ttf" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/layout_marginTop6"
                        android:text="km/h"
                        android:textColor="#02fff6"
                        android:textSize="10sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp">

                    <LinearLayout
                        android:id="@+id/arcview_m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />

                    <com.miyuan.obd.view.ClipProgress
                        android:id="@+id/arcview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/arcview_m"
                        android:layout_alignLeft="@id/arcview_m"
                        android:layout_alignRight="@id/arcview_m"
                        android:layout_alignTop="@id/arcview_m" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dashboard2" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/wanggezi"
                    android:paddingLeft="20dip">

                    <LinearLayout
                        android:id="@+id/line_consumption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-15dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/line_shunshi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="75dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_youhao_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/consumption" />

                            <TextView
                                android:id="@+id/tv_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="15dip"
                                android:text="瞬时油耗      L/h"
                                android:textColor="#02fff6"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/line_shunshi_consumption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <!-- 瞬时油耗 -->

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal">

                                <com.miyuan.obd.view.TextViewFontLcdEx
                                    android:id="@+id/tv_shunshi_consumption"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0 "
                                    android:textColor="#02fff6"
                                    android:textSize="75sp"
                                    berdy:typeface="LcdD.ttf" />
                            </RelativeLayout>
                            <!-- fengexian -->

                            <!-- 油资 -->
                            <com.miyuan.obd.view.TextViewFontLcdEx
                                android:id="@+id/tv_cost2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="90dp"
                                android:text="0 "
                                android:textColor="#02fff6"
                                android:textSize="30sp"
                                berdy:typeface="LcdD.ttf" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="130dp"
                                android:text="L/Km"
                                android:textColor="#02fff6"
                                android:textSize="15sp" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>