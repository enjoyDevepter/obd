<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="160dp"
    android:background="@drawable/hud_setting_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:text="报警灯显示"
        android:textColor="#ff42484B"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#ff707070" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="故障码"
            android:textColor="#FF0692EA"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/fault_show"
            android:layout_width="40dp"
            android:layout_height="18dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/hud_setting_item_bg"
            android:gravity="center"
            android:text="显示"
            android:textColor="#FFFFFFFF"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/fault_dismiss"
            android:layout_width="40dp"
            android:layout_height="18dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/hud_setting_item_bg"
            android:gravity="center"
            android:text="隐藏"
            android:textColor="#FFFFFFFF"
            android:textSize="9sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="电压"
            android:textColor="#FF0692EA"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/voltage_show"
            android:layout_width="40dp"
            android:layout_height="18dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/hud_setting_item_bg"
            android:gravity="center"
            android:text="显示"
            android:textColor="#FFFFFFFF"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/voltage_dismiss"
            android:layout_width="40dp"
            android:layout_height="18dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/hud_setting_item_bg"
            android:gravity="center"
            android:text="隐藏"
            android:textColor="#FFFFFFFF"
            android:textSize="9sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="水温"
            android:textColor="#FF0692EA"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/temp_show"
            android:layout_width="40dp"
            android:layout_height="18dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/hud_setting_item_bg"
            android:gravity="center"
            android:text="显示"
            android:textColor="#FFFFFFFF"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/temp_dismiss"
            android:layout_width="40dp"
            android:layout_height="18dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/hud_setting_item_bg"
            android:gravity="center"
            android:text="隐藏"
            android:textColor="#FFFFFFFF"
            android:textSize="9sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="疲劳驾驶"
            android:textColor="#FF0692EA"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/tried_show"
            android:layout_width="40dp"
            android:layout_height="18dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/hud_setting_item_bg"
            android:gravity="center"
            android:text="显示"
            android:textColor="#FFFFFFFF"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/tried_dismiss"
            android:layout_width="40dp"
            android:layout_height="18dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/hud_setting_item_bg"
            android:gravity="center"
            android:text="隐藏"
            android:textColor="#FFFFFFFF"
            android:textSize="9sp" />
    </LinearLayout>

</LinearLayout>
