<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/setting"
        android:layout_width="46dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/setting_bg"
        android:gravity="center"
        android:text="设置"
        android:textColor="#FFFEFEFE"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/params"
        android:layout_width="46dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/setting_bg"
        android:gravity="center"
        android:text="参数"
        android:textColor="#FFFEFEFE"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="560dp"
        android:layout_height="322dp"
        android:layout_centerInParent="true">

        <!-- 胎压 -->
        <FrameLayout
            android:layout_width="58dp"
            android:layout_height="99dp"
            android:layout_marginLeft="20dp">

            <View
                android:id="@+id/fly_tire_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fly_tire_bg"
                android:visibility="invisible" />

            <View
                android:id="@+id/fly_tire"
                android:layout_width="38dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:background="@drawable/f2_tire_show" />
        </FrameLayout>

        <!-- 燃油 -->
        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="103dp"
            android:layout_marginLeft="113dp">

            <View
                android:id="@+id/fly_oil_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fly_oil_bg"
                android:visibility="invisible" />

            <View
                android:id="@+id/fly_oil"
                android:layout_width="119dp"
                android:layout_height="61dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:background="@drawable/fly_oil_show" />
        </FrameLayout>


        <!-- 转速 -->
        <FrameLayout
            android:layout_width="224dp"
            android:layout_height="203dp"
            android:layout_alignParentBottom="true">

            <View
                android:id="@+id/fly_rpm_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fly_rpm_bg"
                android:visibility="invisible" />

            <View
                android:id="@+id/fly_rpm"
                android:layout_width="200dp"
                android:layout_height="157dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/fly_rpm_show" />


            <View
                android:id="@+id/fault"
                android:layout_width="22dp"
                android:layout_height="15dp"
                android:layout_marginLeft="118dp"
                android:layout_marginTop="128dp"
                android:background="@drawable/fault_show" />
        </FrameLayout>


        <!-- 车速 -->
        <FrameLayout
            android:layout_width="327dp"
            android:layout_height="286dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true">

            <View
                android:id="@+id/fly_speed_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fly_speed_bg"
                android:visibility="invisible" />

            <View
                android:id="@+id/fly_speed"
                android:layout_width="313dp"
                android:layout_height="240dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/fly_speed_show" />

            <View
                android:id="@+id/fly_multifunctional"
                android:layout_width="185dp"
                android:layout_height="125dp"
                android:layout_marginLeft="76dp"
                android:layout_marginTop="118dp"
                android:background="@drawable/fly_multifunctional_voltage_show" />

            <FrameLayout
                android:layout_width="139dp"
                android:layout_height="48dp"
                android:layout_marginLeft="98dp"
                android:layout_marginTop="66dp">

                <View
                    android:id="@+id/fly_warm_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/fly_warm_bg"
                    android:visibility="invisible" />

                <View
                    android:id="@+id/voltage"
                    android:layout_width="19dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="23dp"
                    android:background="@drawable/voltage_show" />

                <View
                    android:id="@+id/temp"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginLeft="43dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/temperature_show" />

                <View
                    android:id="@+id/tired"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="75dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/tired_show" />

                <View
                    android:id="@+id/speed"
                    android:layout_width="23dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="107dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/speed_show" />

            </FrameLayout>
        </FrameLayout>
    </RelativeLayout>

</RelativeLayout>
