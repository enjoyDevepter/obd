<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/setting"
        android:layout_width="46dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|left"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/setting_bg"
        android:gravity="center"
        android:text="设置"
        android:textColor="#FFFEFEFE"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="40dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="540dp"
            android:layout_height="306dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- 速度面板-->
            <FrameLayout
                android:layout_width="319dp"
                android:layout_height="296dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp">

                <View
                    android:id="@+id/ff_speed_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>


            <!-- 胎压 -->
            <FrameLayout
                android:layout_width="62dp"
                android:layout_height="94dp"
                android:layout_gravity="right|top"
                android:layout_marginRight="15dp">

                <View
                    android:id="@+id/ff_tire_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ff_tire_bg" />

                <View
                    android:id="@+id/ff_tire"
                    android:layout_width="41dp"
                    android:layout_height="54dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="34dp"
                    android:background="@drawable/ff_tire_show" />

            </FrameLayout>


            <!-- 水温 -->
            <FrameLayout
                android:layout_width="86dp"
                android:layout_height="206dp"
                android:layout_gravity="right|bottom">

                <View
                    android:id="@+id/ff_temp_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ff_temp_bg" />

                <View
                    android:id="@+id/ff_temp"
                    android:layout_width="47dp"
                    android:layout_height="158dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ff_temp_show" />

            </FrameLayout>

        </FrameLayout>
    </LinearLayout>

</LinearLayout>
