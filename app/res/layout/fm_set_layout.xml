<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/tittle_layout"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_marginBottom="15dp"
        android:background="@color/title_color"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/back" />
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="58dp"
            android:text="如何手动设置频点"
            android:textColor="@color/title"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/report"
            android:layout_width="44dp"
            android:layout_height="18dp"
            android:layout_gravity="right"
            android:layout_marginTop="9dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/report_bg"
            android:gravity="center"
            android:text="上报错误"
            android:textColor="#FFB0B0AF"
            android:textSize="8dp"
            android:visibility="gone" />

        <View
            android:id="@+id/home"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/home_back" />

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:text="使用帮助"
            android:textColor="#FF008AFF"
            android:textSize="15sp" />

        <View
            android:layout_width="57dp"
            android:layout_height="1dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="42dp"
            android:layout_marginBottom="5dp"
            android:background="#FF008AFF" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="108.0"
            android:textColor="#FF000000"
            android:textSize="80sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MHZ"
            android:textColor="#FF000000"
            android:textSize="15sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp">

        <View
            android:id="@+id/one"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/one" />

        <View
            android:id="@+id/two"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="75dp"
            android:background="@drawable/two" />

        <View
            android:id="@+id/three"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="150dp"
            android:background="@drawable/three" />

        <View
            android:id="@+id/four"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/four" />

        <View
            android:id="@+id/five"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/five" />

        <View
            android:id="@+id/six"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/six" />


        <View
            android:id="@+id/seven"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="120dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/seven" />

        <View
            android:id="@+id/eight"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/eight" />

        <View
            android:id="@+id/nine"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/dot" />

        <View
            android:id="@+id/zero"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="180dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/nine" />

        <View
            android:id="@+id/dot"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/zero" />

        <View
            android:id="@+id/del"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/del" />
    </FrameLayout>


    <TextView
        android:id="@+id/confirm"
        android:layout_width="280dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/btn_bg"
        android:gravity="center"
        android:text="设置"
        android:textColor="#ffffffff"
        android:textSize="18sp"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="注意：只允许设置为87.5~108.0"
        android:textColor="#FF575757"
        android:textSize="15sp" />
</LinearLayout>
