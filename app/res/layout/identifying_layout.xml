        android:layout_marginRight="@dimen/common_margin_lr"
        android:layout_marginTop="30dp"
        android:inputType="number"
        android:textColor="#FFAEAEAE"
        android:textSize="40sp"
        psd:maxCount="6"
        psd:psdType="bottomLine" />

