<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="horizontal">

    <View
        android:id="@+id/back"
        android:layout_width="27dp"
        android:layout_height="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/hud_back" />

    <TextView
        android:id="@+id/setting"
        android:layout_width="46dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/setting_bg"
        android:gravity="center"
        android:text="界面"
        android:textColor="#FFFEFEFE"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/params"
        android:layout_width="46dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/setting_bg"
        android:gravity="center"
        android:text="设置"
        android:textColor="#FFFEFEFE"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="530dp"
        android:layout_height="312dp"
        android:layout_centerInParent="true">

        <!-- 胎压 -->
        <FrameLayout
            android:layout_width="78dp"
            android:layout_height="88dp"
            android:layout_alignParentRight="true">

            <View
                android:id="@+id/m2_tire_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/m2_tire_bg"
                android:visibility="invisible" />

            <View
                android:id="@+id/m2_tire"
                android:layout_width="53dp"
                android:layout_height="47dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/tire_show" />
        </FrameLayout>


        <!-- 预警 -->
        <FrameLayout
            android:id="@+id/warm"
            android:layout_width="282dp"
            android:layout_height="77dp"
            android:layout_alignParentBottom="true">

            <View
                android:id="@+id/m2_warm_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/m2_warm_bg"
                android:visibility="invisible" />

            <View
                android:id="@+id/fault"
                android:layout_width="36dp"
                android:layout_height="27dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/fault_show" />

            <View
                android:id="@+id/temp"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginLeft="52dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/temperature_show" />

            <View
                android:id="@+id/voltage"
                android:layout_width="34dp"
                android:layout_height="27dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/voltage_show" />

            <View
                android:id="@+id/oil"
                android:layout_width="31dp"
                android:layout_height="27dp"
                android:layout_marginLeft="135dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/oil_show" />

            <View
                android:id="@+id/speed"
                android:layout_width="31dp"
                android:layout_height="27dp"
                android:layout_marginLeft="178dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/speed_show" />

            <View
                android:id="@+id/tired"
                android:layout_width="31dp"
                android:layout_height="27dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/tired_show" />


        </FrameLayout>

        <!-- 预警 -->
        <View
            android:id="@+id/multifunctional_bg"
            android:layout_width="187dp"
            android:layout_height="138dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:visibility="invisible"
            android:background="@drawable/m2_multifunctional_bg" />

        <!-- 多功能区-->
        <View
            android:id="@+id/multifunctional"
            android:layout_width="465dp"
            android:layout_height="232dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/m2_multifunctional_oil_show" />

    </RelativeLayout>

</RelativeLayout>
