<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/setting"
        android:layout_width="46dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/setting_bg"
        android:gravity="center"
        android:text="设置"
        android:textColor="#FFFEFEFE"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/params"
        android:layout_width="46dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/setting_bg"
        android:gravity="center"
        android:text="参数"
        android:textColor="#FFFEFEFE"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="566dp"
        android:layout_height="325dp"
        android:layout_centerInParent="true">

        <!-- 胎压 -->
        <FrameLayout
            android:layout_width="72dp"
            android:layout_height="85dp"
            android:layout_alignParentRight="true">

            <View
                android:id="@+id/m3_tire_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/m3_tire_bg"
                android:visibility="invisible" />

            <View
                android:id="@+id/m3_tire"
                android:layout_width="39dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/tire_show" />
        </FrameLayout>

        <!-- 转速 -->
        <FrameLayout
            android:layout_width="490dp"
            android:layout_height="149dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp">

            <View
                android:id="@+id/m3_rpm_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/m3_rpm_bg"
                android:visibility="invisible" />

            <View
                android:id="@+id/m3_rpm"
                android:layout_width="456dp"
                android:layout_height="82dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="48dp"
                android:background="@drawable/m3_rpm_show" />
        </FrameLayout>


        <!-- 预警一 -->
        <FrameLayout
            android:layout_width="152dp"
            android:layout_height="143dp"
            android:layout_alignParentBottom="true">

            <View
                android:id="@+id/m3_warm_bg1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/m3_warm_bg1"
                android:visibility="invisible" />

            <View
                android:id="@+id/fault"
                android:layout_width="34dp"
                android:layout_height="23dp"
                android:layout_marginLeft="52dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/fault_show" />

            <View
                android:id="@+id/temp"
                android:layout_width="30dp"
                android:layout_height="29dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/temperature_show" />

            <View
                android:id="@+id/speed"
                android:layout_width="34dp"
                android:layout_height="17dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="66dp"
                android:background="@drawable/speed_show" />


            <View
                android:id="@+id/oil"
                android:layout_width="22dp"
                android:layout_height="30dp"
                android:layout_marginLeft="58dp"
                android:layout_marginTop="59dp"
                android:background="@drawable/oil_show" />

        </FrameLayout>


        <!-- 预警二 -->
        <FrameLayout
            android:layout_width="102dp"
            android:layout_height="143dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true">

            <View
                android:id="@+id/m3_warm_bg2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/m3_warm_bg2"
                android:visibility="invisible" />


            <View
                android:id="@+id/voltage"
                android:layout_width="34dp"
                android:layout_height="27dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/voltage_show" />

            <View
                android:id="@+id/tired"
                android:layout_width="31dp"
                android:layout_height="27dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/tired_show" />


        </FrameLayout>


        <!-- 多功能区 -->
        <FrameLayout
            android:layout_width="342dp"
            android:layout_height="190dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="109dp">

            <View
                android:id="@+id/m3_multifunctional_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/m3_multifunctional_bg"
                android:visibility="invisible" />

            <View
                android:id="@+id/m3_multifunctional"
                android:layout_width="321dp"
                android:layout_height="130dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/m3_multifunctional_voltage_show" />

        </FrameLayout>
    </RelativeLayout>

</RelativeLayout>
