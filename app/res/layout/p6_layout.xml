<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <RelativeLayout
        android:layout_width="592dp"
        android:layout_height="330dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <!--多功能区 -->
        <FrameLayout
            android:layout_width="156dp"
            android:layout_height="97dp"
            android:layout_alignParentRight="true">

            <View
                android:id="@+id/multifunctional_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/da_multifunctional_bg"
                android:visibility="invisible" />

            <View
                android:id="@+id/multifunctional"
                android:layout_width="83dp"
                android:layout_height="52dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="38dp"
                android:background="@drawable/multifunctional_voltage_show" />

        </FrameLayout>
        <!-- 转速-->
        <FrameLayout
            android:layout_width="137dp"
            android:layout_height="262dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="368dp"
            android:layout_marginBottom="10dp">

            <View
                android:id="@+id/da_rpm_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/lily_rpm_bg"
                android:visibility="invisible" />

            <View
                android:id="@+id/da_rpm"
                android:layout_width="73dp"
                android:layout_height="211dp"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/da_rpm_show" />
        </FrameLayout>

        <!-- 瞬时油耗-->
        <FrameLayout
            android:layout_width="115dp"
            android:layout_height="262dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="72dp"
            android:layout_marginBottom="10dp">

            <View
                android:id="@+id/da_oil_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/da_oil_bg"
                android:visibility="invisible" />

            <View
                android:id="@+id/da_oil"
                android:layout_width="75dp"
                android:layout_height="201dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/da_oil_show" />
        </FrameLayout>

        <!-- 速度面板-->
        <FrameLayout
            android:layout_width="319dp"
            android:layout_height="297dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="118dp">

            <View
                android:id="@+id/da_speed_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/lily_speed_bg"
                android:visibility="invisible" />

            <View
                android:id="@+id/da_speed"
                android:layout_width="305dp"
                android:layout_height="233dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:background="@drawable/da_speed_show" />

            <View
                android:id="@+id/da_mile"
                android:layout_width="172dp"
                android:layout_height="109dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="124dp"
                android:background="@drawable/da_mile_show" />


            <FrameLayout
                android:layout_width="136dp"
                android:layout_height="39dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="63dp">

                <View
                    android:id="@+id/da_warm_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/da_warm_bg"
                    android:visibility="invisible" />

                <View
                    android:id="@+id/fault"
                    android:layout_width="24dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/fault_show" />

                <View
                    android:id="@+id/voltage"
                    android:layout_width="23dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/voltage_show" />

                <View
                    android:id="@+id/speed"
                    android:layout_width="24dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="76dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/speed_show" />

                <View
                    android:id="@+id/tired"
                    android:layout_width="18dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="114dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/tired_show" />

            </FrameLayout>
        </FrameLayout>
        <!-- 水温 -->
        <FrameLayout
            android:layout_width="86dp"
            android:layout_height="206dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="473dp"
            android:layout_marginBottom="10dp">

            <View
                android:id="@+id/lily_temp_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/lily_temp_bg"
                android:visibility="invisible" />

            <View
                android:id="@+id/lily_temp"
                android:layout_width="47dp"
                android:layout_height="158dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/lily_temp_show" />

        </FrameLayout>

        <!-- 剩余燃油 -->
        <FrameLayout
            android:layout_width="64dp"
            android:layout_height="205dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="18dp"
            android:layout_marginBottom="10dp">

            <View
                android:id="@+id/lily_remaining_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/lily_remaining_bg"
                android:visibility="invisible" />

            <View
                android:id="@+id/lily_remaining"
                android:layout_width="46dp"
                android:layout_height="159dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/lily_remaining_show" />

        </FrameLayout>

        <!-- 胎压-->
        <FrameLayout
            android:layout_width="62dp"
            android:layout_height="94dp">

            <View
                android:id="@+id/da_tire_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/da_tire_bg"
                android:visibility="invisible" />

            <View
                android:id="@+id/da_tire"
                android:layout_width="41dp"
                android:layout_height="54dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="33dp"
                android:background="@drawable/da_tire_show" />

        </FrameLayout>
    </RelativeLayout>


    <TextView
        android:id="@+id/setting"
        android:layout_width="46dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"
        android:background="@drawable/setting_bg"
        android:gravity="center"
        android:text="设置"
        android:textColor="#FFFEFEFE"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/params"
        android:layout_width="46dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/setting_bg"
        android:gravity="center"
        android:text="参数"
        android:textColor="#FFFEFEFE"
        android:textSize="14sp" />

</RelativeLayout>
